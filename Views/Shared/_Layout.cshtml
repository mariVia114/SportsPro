<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportsPro.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow navbar-custom fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportsPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <div class="sidenav">
        <nav class="nav nav-pills flex-column">
            <a class="flex-sm-fill nav-link active mb-1 rounded-0" asp-controller="Home" asp-action="Index">Home</a>
            <a class="flex-sm-fill nav-link active mb-1 rounded-0" asp-controller="Products"
                asp-action="Index">Products</a>
            <a class="flex-sm-fill nav-link active mb-1 rounded-0" asp-controller="Technicians"
                asp-action="Index">Technicians</a>
            <a class="flex-sm-fill nav-link active mb-1 rounded-0" asp-controller="Customers"
                asp-action="Index">Customers</a>
            <a class="flex-sm-fill nav-link active mb-1 rounded-0" asp-controller="Incidents"
                asp-action="Index">Incidents</a>
            <a class="flex-sm-fill nav-link active mb-1 rounded-0" asp-controller="Registrations"
                asp-action="Registrations">Registrations</a>
            <a class="flex-sm-fill nav-link active mb-1 rounded-0" asp-controller="Home" asp-action="About">About</a>
        </nav>
    </div>
    <main role="main" class="main">
        <div class="container" style="margin-top:70px; margin-bottom:20px">
            @RenderBody()
        </div>
    </main>
    <footer class="border-top footer text-muted">
        <div class="" style="margin-left:260px">
            &copy; 2022 - SportsPro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
