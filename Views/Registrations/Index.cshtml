@using SportsPro.Models.ManageViewModels
@model CustomerProductViewModel
@{
    ViewData["Title"] = "Registrations";
}

<form action="~/registrations/" method="get" >
    <h1>Registrations</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" style="margin-bottom: 15px">
        @Html.DropDownListFor(model => model.CustomerId, Model.Customers, "Select a customer", new {@class = "form-control"} )
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</form>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

