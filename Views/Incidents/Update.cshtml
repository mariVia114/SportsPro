@model SportsPro.Dtos.IncidentDto

@{
    ViewData["Title"] = "Edit Incident";
}

<h1>Edit Incident</h1>

<div class="row">
        <form asp-action="Update" class="form-horizontal">
            <input type="hidden" asp-for="IncidentId" />
            <div class="form-group">
                <label asp-for="Technician.Name" class="control-label col-sm-2"></label>
                <span class="col-sm-10">
                     <p class="form-control-static">@Model.Technician.Name</p>
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.FullName" class="control-label col-sm-2"></label>
                <span class="col-sm-10">
                     <p class="form-control-static">@Model.Customer.FullName</p>
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label col-sm-2"></label>
                <span class="col-sm-10">
                     <p class="form-control-static">@Model.Product.Name</p>
                </span>
            </div>
             <div class="form-group">
                <label asp-for="Title" class="control-label col-sm-2"></label>
                <span class="col-sm-10">
                     <p class="form-control-static">@Model.Title</p>
                </span>
            </div>
             <div class="form-group">
                <label asp-for="DateOpened" class="control-label col-sm-2"></label>
                <span class="col-sm-10">
                     <p class="form-control-static">@Model.DateOpened.ToString("g")</p>
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label col-sm-2"></label>
                 <span class="col-sm-10">
                <input asp-for="Description" class="form-control" />
                </span>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateClosed" class="control-label col-sm-2"></label>
                 <span class="col-sm-10">
                      <input asp-for="DateClosed" class="form-control" />
                </span>
               <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
