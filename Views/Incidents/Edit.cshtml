@model SportsPro.Models.IncidentModels.IncidentViewModel

@{
    ViewData["Title"] = "Edit Incident";
}

<h1>Edit Incident</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Incident.IncidentId" />
            <div class="form-group">
                <label asp-for="Incident.Title" class="control-label"></label>
                <input asp-for="Incident.Title" class="form-control" />
                 <span asp-validation-for="Incident.Title" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="Incident.Description" class="control-label"></label>
                <input asp-for="Incident.Description" class="form-control" />
                 <span asp-validation-for="Incident.Description" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="Incident.CustomerId" class="control-label"></label>
                <select asp-for="Incident.CustomerId" class="form-control" asp-items="@(new SelectList(Model.CustomerList, "Value", "Text"))"></select>
                 <span asp-validation-for="Incident.CustomerId" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="Incident.ProductId" class="control-label"></label>
                <select asp-for="Incident.ProductId" class="form-control" asp-items="@(new SelectList(Model.ProductList, "Value", "Text"))"></select>
                 <span asp-validation-for="Incident.ProductId" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="Incident.TechnicianId" class="control-label"></label>
                <select asp-for="Incident.TechnicianId" class="form-control" asp-items="@(new SelectList(Model.TechnicianList, "Value", "Text"))"></select>
                 <span asp-validation-for="Incident.TechnicianId" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="Incident.DateOpened" class="control-label"></label>
                <input asp-for="Incident.DateOpened" class="form-control" />
                 <span asp-validation-for="Incident.DateOpened" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="Incident.DateClosed" class="control-label"></label>
                <input asp-for="Incident.DateClosed" class="form-control" />
                 <span asp-validation-for="Incident.DateClosed" class="text-danger"></span> 
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
